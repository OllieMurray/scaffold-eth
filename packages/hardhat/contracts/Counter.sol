contract Counter {

    uint public count;

    // Function to get the current count
    function get() public view returns (uint) {
        return count;
    }

    // Function to increment count by 1
    function inc() public {
        count += 1;
    }

    // Function to decrement count by 1
    //added require statement to prevent uint < 0 error
    function dec() public {
        require(count-1>=0, "count cannot be negative");
        count -= 1;
    }
}